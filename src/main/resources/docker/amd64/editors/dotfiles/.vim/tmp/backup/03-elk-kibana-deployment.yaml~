---
apiVersion: v1
kind: Service
metadata:
  name: kibana
  labels:
    app: kibana
    tier: frontend
spec:
  type: NodePort
  ports:
  - port: 5601
    targetPort: 5601
    nodePort: 32456
  selector:
    app: kibana
    tier: frontend

---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: kibana
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: kibana
        tier: frontend
    spec:
      containers:
      - name: kibana
        image: registry.gear.ge.com/100034251/kibana:6.5.4
        ports:
        - containerPort: 5601
        env:
        - name: "SERVER_HOST"
          value: "0.0.0.0"
        - name: "SERVER_BASEPATH"
          value: "/kibana-dashboard"
        - name: "ELASTICSEARCH_URL"
          value: "http://elasticsearch:9200"
        volumeMounts:
        - name: elk-kibana-data
          mountPath: /usr/share/kibana/data
          subPath: kube-system/kibana/data
      initContainers:
      - name: init-kibana-dirs
        image: busybox
        command:
          - 'sh'
          - '-c'
          - >
            mkdir -p /mnt/kube-system/kibana/data;
            chown 1000:1000 /mnt/kube-system/kibana;
            chown 1000:1000 /mnt/kube-system/kibana/data;
        volumeMounts:
        - name: elk-kibana-data
          mountPath: /mnt
      volumes:
      - name: elk-kibana-data
        persistentVolumeClaim:
          claimName: elk-kib-claim


---
apiVersion: v1
kind: Service
metadata:
  name: elasticsearch
  labels:
    app: elasticsearch
    tier: backend
spec:
  ports:
  - name: api
    port: 9200
    targetPort: 9200
  - name: internal
    port: 9300
    targetPort: 9300
  selector:
    app: elasticsearch
    tier: backend

---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: elasticsearch
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: elasticsearch
        tier: backend
    spec:
      containers:
      - name: elasticsearch
        image: registry.gear.ge.com/100034251/elasticsearch:6.5.4
        ports:
        - containerPort: 9200
        - containerPort: 9300
        env:
        - name: "network.host"
          value: "0.0.0.0"
        - name: "cluster.name"
          value: "elasticsearch"
        - name: "discovery.zen.minimum_master_nodes"
          value: "1"
        - name: "ES_JAVA_OPTS"
          value: "-Xms512m -Xmx512m"
        volumeMounts:
        - name: elk-elasticsearch-data
          mountPath: /usr/share/elasticsearch/data
          subPath: kube-system/elasticsearch/data
      initContainers:
      - name: init-elk-mem
        securityContext:
          privileged: true
        image: busybox
        command: [ "sysctl", "-w", "vm.max_map_count=262144" ]
      - name: init-elk-dirs
        image: busybox
        command:
          - 'sh'
          - '-c'
          - >
            mkdir -p /mnt/kube-system/elasticsearch/data;
            chown 1000:1000 /mnt/kube-system/elasticsearch;
            chown 1000:1000 /mnt/kube-system/elasticsearch/data;
        volumeMounts:
        - name: elk-elasticsearch-data
          mountPath: /mnt
      volumes:
      - name: elk-elasticsearch-data
        persistentVolumeClaim:
          claimName: elk-es-claim

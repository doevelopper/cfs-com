---
apiVersion: v1
kind: Service
metadata:
  name: logstash
  labels:
    app: logstash
    tier: backend
spec:
  ports:
  - port: 5044
    targetPort: 5044
  selector:
    app: logstash
    tier: backend
    
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: logstash
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: logstash
        tier: backend
    spec:
      containers:
      - name: logstash
        image: docker.elastic.co/logstash/logstash-oss:6.2.2
        ports:
        - containerPort: 5044
        env:
        - name: "http.host"
          value: "0.0.0.0"
        volumeMounts:
          - name: elk-logstash-data
            mountPath: /usr/share/logstash/data
            subPath: kube-system/logstash/data
      initContainers:
      - name: init-ls-dirs
        image: busybox
        command:
          - 'sh'
          - '-c'
          - >
            mkdir -p /mnt/kube-system/logstash/data;
            chown 1000:1000 /mnt/kube-system/logstash;
            chown 1000:1000 /mnt/kube-system/logstash/data;
        volumeMounts:
        - name: elk-logstash-data
          mountPath: /mnt
      volumes:
      - name: elk-logstash-data
        persistentVolumeClaim:
          claimName: elk-ls-claim
          